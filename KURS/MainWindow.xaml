<Window x:Class="KURS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KURS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="340*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20" Grid.RowSpan="2">
            <TextBlock Text="Login" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
            <Label Content="Username:"/>
            <TextBox x:Name="usernameTextBox" Margin="0 0 0 10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="passwordBox" Margin="0 0 0 10"/>
            <Button Content="Login" Click="Login_Click"/>
        </StackPanel>
        <Button Content="Registration" Click="Registration_Click" Margin="20,119,20,199" Grid.Row="1"/>
    </Grid>
</Window>
