<Window x:Class="KURS.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KURS"
        mc:Ignorable="d"
        Title="RegistrationPage" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Registration" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
            <Label Content="Username:"/>
            <TextBox x:Name="usernameTextBox" Margin="0 0 0 10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="passwordBox" Margin="0 0 0 10"/>
            <Label Content="Confirm Password:"/>
            <PasswordBox x:Name="confirmPasswordBox" Margin="0 0 0 10"/>
            <Button Content="Register" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
